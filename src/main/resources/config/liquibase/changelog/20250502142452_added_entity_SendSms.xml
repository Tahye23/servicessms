<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Added the entity Contact.
    -->
    <changeSet id="20250427111352-1" author="jhipster">
        <preConditions onFail="MARK_RAN" onError="HALT">
            <not>
                <columnExists tableName="send_sms" columnName="type"/>
            </not>
        </preConditions>
        <addColumn tableName="send_sms">
            <column name="type" type="varchar(20)"/>
            <column name="delivery_status" type="varchar(255)"/>
         </addColumn>
     </changeSet>

    <changeSet id="20250912141352-1" author="saadna">
        <preConditions onFail="MARK_RAN" onError="HALT">
            <not>
                <columnExists tableName="send_sms" columnName="message_id"/>
            </not>
        </preConditions>
        <addColumn tableName="send_sms">
            <column name="message_id" type="varchar(255)"/>
        </addColumn>
    </changeSet>


 </databaseChangeLog>
