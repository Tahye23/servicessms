<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="20250505-01-update-code-column" author="ton_nom">
        <preConditions onFail="MARK_RAN" onError="HALT">
            <not>
                <columnExists tableName="template" columnName="status"/>
            </not>
        </preConditions>
        <modifyDataType tableName="template" columnName="code" newDataType="TEXT"/>

        <addColumn tableName="template">
            <column name="status" type="varchar(255)"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
