<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="add-fields-to-template-20250502" author="tajedine">
        <preConditions onFail="MARK_RAN" onError="HALT">
            <not>
                <columnExists tableName="template" columnName="code"/>
            </not>
        </preConditions>
        <addColumn tableName="template">
            <column name="template_id" type="varchar(255)"/>
            <column name="code" type="varchar(255)"/>
            <column name="template_name" type="varchar(255)"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
